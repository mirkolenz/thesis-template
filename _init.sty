% References
\RequirePackage{zref-clever}
\let\cref\zcref
\let\Cref\zcref
\zcsetup{noabbrev, cap}
\RequirePackage{acro}[=v2]
\acsetup{
  hyperref=false,
  short-format={},
  long-format={},
}
% fix for issue with v2 in texlive 2024: https://tex.stackexchange.com/a/724382
\acsetup{display-foreign=false}
\acsetup{foreign-format={\scshape}}
\ExplSyntaxOn
\prop_new:N \l__acro_foreign_format_prop
\ExplSyntaxOff

% Pseudo-Code
\RequirePackage{algorithm}
\RequirePackage[noend]{algpseudocode}
\algrenewcommand\alglinenumber[1]{\footnotesize #1}

% Aliases
\newcommand*{\schemeLink}[2]{\href{#1#2}{\nolinkurl{#2}}}
\newcommand*{\mailtoLink}[1]{\schemeLink{mailto:}{#1}}
\newcommand*{\telLink}[1]{\schemeLink{tel:}{#1}}
\newcommand*{\httpLink}[1]{\schemeLink{http://}{#1}}
\newcommand*{\httpsLink}[1]{\schemeLink{https://}{#1}}
\newcommand*{\githubLink}[1]{\httpsLink{github.com/#1}}
\newcommand*{\pypiLink}[1]{\httpsLink{pypi.org/project/#1}}
\newcommand*{\anonymousGithubLink}[1]{\httpsLink{anonymous.4open.science/r/#1}}
\newcommand*{\zenodoLink}[1]{\httpsLink{zenodo.org/records/#1}}
\newcommand*{\doiLink}[1]{\httpsLink{doi.org/#1}}

